{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": ["es6","es2016.array.include"],
    "typeRoots": ["node_modules"],
    "types": ["node"]
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
