{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": ["es6", "dom", "es2015.promise"],
    "typeRoots": ["node_modules"],
    "types": ["lodash"]
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
